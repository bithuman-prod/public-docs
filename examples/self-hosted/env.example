# bitHuman Configuration
# Get your API secret from https://platform.bithuman.ai
BITHUMAN_API_SECRET=your_api_secret_here

# Path to your bitHuman model file (.imx format)
# Download from the bitHuman platform after creating your avatar
BITHUMAN_MODEL_PATH=/path/to/your/avatar_model.imx

# OpenAI Configuration
# Required for conversational AI capabilities
OPENAI_API_KEY=your_openai_api_key_here

# LiveKit Configuration
# Use LiveKit Cloud or your own LiveKit server
LIVEKIT_URL=wss://your-livekit-server.com
LIVEKIT_API_KEY=your_livekit_api_key
LIVEKIT_API_SECRET=your_livekit_api_secret

# Optional: Development Settings
# Set to true for enhanced debugging and development features
DEV_MODE=false

# Optional: Native BitHuman Integration
# Set to true to use native AsyncBithuman instead of LiveKit plugin
# Provides better performance and direct control over BitHuman runtime
USE_NATIVE_BITHUMAN=true

# Optional: Logging Level
# Available levels: DEBUG, INFO, WARNING, ERROR
LOG_LEVEL=INFO
